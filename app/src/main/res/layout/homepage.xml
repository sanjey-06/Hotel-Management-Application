<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Top Half: Image -->
    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/background3"
        android:scaleType="centerCrop"
        android:contentDescription="Banner Image" />

    <!-- Bottom Half: Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- Button 1: View Calendar -->

        <!-- Button 2: Enter Occupants -->

        <Button
            android:id="@+id/view_calendar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="-80dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:text="View Calendar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/enter_occupants_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-80dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/teal_700"
            android:text="Occupants"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <!-- Button 3: Search -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-80dp"
            android:backgroundTint="@color/teal_700"
            android:text="Search"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
